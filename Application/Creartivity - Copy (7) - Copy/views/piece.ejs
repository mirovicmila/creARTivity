<% include ../views/partials/header %>
<div class="card" style="width: 18rem">
  <img class="card-img-top" src="<%=image%>" alt="Card image cap" />
  <div class="card-body">
    <h3 class="card-title"><%= name%></h3>
    <h6 class="card-subtitle mb-2 text-muted"><%= id%></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= author%></h6>
    <h7 class="card-subtitle mb-2 text-muted"><%= type%></h7>
    <p class="card-text"><%= description%></p>
    <a href="<%= link%>" class="card-link">See it in augmented reality</a>
  </div>
</div>
<h3>Update Piece values</h3>
    <a
      class="btn btn-primary"
      data-bs-toggle="collapse"
      href="#updatepiece"
      role="button"
      aria-expanded="false"
      aria-controls="updatepiece"
      >Update a Piece</a
    >
    <div class="collapse" id="updatepiece">
      <div class="card">
        <form method="POST" action="/piece/edit">
          <input type="text" name="id" placeholder="Id" value="<%= id%>" hidden />
          <input type="text" name="name" placeholder="Name"  />
          <br />
          <input type="text" name="type" placeholder="Type of art"  />
          <br />
          <input type="text" name="author" placeholder="Piece author" />
          <br />
          <input type="text" name="description" placeholder="Description"  />
          <br />
          <input
            type="text"
            name="link"
            placeholder="Link for augmented reality"
          />
          <br />
          <input type="text" name="image" placeholder="Image" />
          <br />
          <input
            type="submit"
            value="Update Piece of Art"
            class="btn btn-outline-dark btn-sm"
          />
        </form>
      </div>
    </div>
    <form action="/piece/<%=id%>" method="delete">
      <div>
        <h3>Remove a Piece</h3>
        <button id="delete-button" class="btn-danger btn-sm" data-id="<%= id%>">Delete</button>
      </div>
    </form>

<script>
  const deleteButton = document.querySelector('#delete-button')
  deleteButton.addEventListener('click', _ => {
  fetch('/piece', {
    method: 'delete',
  })
 
})
</script>
<% include ../views/partials/footer %>
