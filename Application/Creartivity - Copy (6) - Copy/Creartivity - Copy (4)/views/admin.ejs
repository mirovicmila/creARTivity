<% include ../views/partials/header %>
<h3>Add a new Museum</h3>
<a
  class="btn btn-primary"
  data-bs-toggle="collapse"
  href="#addmuseum"
  role="button"
  aria-expanded="false"
  aria-controls="addmuseum"
  >Add a new Museum</a
>
<div class="collapse" id="addmuseum">
  <div class="card">
    <form method="POST" action="/museum/add">
      <input type="text" name="name" placeholder="Name" />
      <br />
      <input type="text" name="ticketPrice" placeholder="Ticket price" />
      <br />
      <input type="text" name="type" placeholder="Type of museum" />
      <br />
      <input type="text" name="webLocation" placeholder="Web Location" />
      <br />
      <input type="text" name="workingHours" placeholder="Working hours" />
      <br />
      <input type="text" name="address" placeholder="Museum location" />
      <br />
      <input type="text" name="image" placeholder="Thumbnail image" />
      <br />
      <input
        type="submit"
        value="Add Museum"
        class="btn btn-outline-dark btn-sm"
      />
    </form>
  </div>
</div>
<h3>Update Museum values</h3>
<a
  class="btn btn-primary"
  data-bs-toggle="collapse"
  href="#updatemuseum"
  role="button"
  aria-expanded="false"
  aria-controls="updatemuseum"
  >Update a Museum</a
>
<div class="collapse" id="updatemuseum">
  <div class="card">
    <form method="PUT" action="/museum/put">
      <input type="text" name="name" placeholder="Name" />
      <br />
      <input type="text" name="ticketPrice" placeholder="Ticket price" />
      <br />
      <input type="text" name="type" placeholder="Type of museum" />
      <br />
      <input type="text" name="webLocation" placeholder="Web Location" />
      <br />
      <input type="text" name="workingHours" placeholder="Working hours" />
      <br />
      <input type="text" name="address" placeholder="Museum location" />
      <br />
      <input type="text" name="image" placeholder="Thumbnail Image" />
      <br />
      <br />
      <input
        type="submit"
        value="Update Museum"
        class="btn btn-outline-dark btn-sm"
      />
    </form>
</div>
</div>
