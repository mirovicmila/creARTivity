      <input type="submit" value="Delete Piece" class="btn btn-danger btn-sm" />
    </form>
    <h3>Add piece to a museum</h3>
    <form method="POST" action="/museumpiece/connect">
      <input type="text" name="nameM" placeholder="Museum name" />
      <br />
      <input type="text" name="nameP" placeholder="Piece name" />
      <br />
      <input
        type="submit"
        value="Add Piece of Art"
        class="btn btn-outline-dark btn-sm"
      />
    </form>

    <h3>Add distance beteween museums</h3>
    <form method="POST" action="/museumtomuseum/connectmuseums">
      <input type="text" name="name1" placeholder="Start museum" />
      <input type="text" name="name2" placeholder="End museum" />
      <input type="text" name="distance" placeholder="Distance" />
      <input
        type="submit"
        value="Add distance"
        class="btn btn-outline-dark btn-sm"
      />
    </form>
    <% include ../views/partials/footer %>
  </div>
</div>
