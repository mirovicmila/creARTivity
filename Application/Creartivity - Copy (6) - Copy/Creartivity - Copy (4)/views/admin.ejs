      <input
        type="submit"
        value="Delete Museum"
        class="btn btn-danger btn-sm"
      />
    </form>
    <h3>Add a new Piece</h3>
    <a
      class="btn btn-primary"
      data-bs-toggle="collapse"
      href="#addpiece"
      role="button"
      aria-expanded="false"
      aria-controls="addpiece"
      >Add a new Piece</a
    >
    <div class="collapse" id="addpiece">
      <div class="card">
        <form method="POST" action="/piece/add">
          <input type="text" name="name" placeholder="Name" />
          <br />
          <input type="text" name="author" placeholder="Author" />
          <br />
          <input type="text" name="type" placeholder="Type of art" />
          <br />
          <input type="text" name="description" placeholder="Desription" />
          <br />
          <input
            type="text"
            name="link"
            placeholder="Link for augmented reality"
          />
          <br />
          <input type="text" name="image" placeholder="Image" />
          <br />
          <input
            type="submit"
            value="Add Piece of Art"
            class="btn btn-outline-dark btn-sm"
          />
        </form>
      </div>
    </div>
    <h3>Update Piece values</h3>
    <a
      class="btn btn-primary"
      data-bs-toggle="collapse"
      href="#updatepiece"
      role="button"
      aria-expanded="false"
      aria-controls="updatepiece"
      >Update a Piece</a
    >
    <div class="collapse" id="updatepiece">
      <div class="card">
        <form method="PUT" action="/piece/put">
          <input type="text" name="name" placeholder="Name" />
          <br />
          <input type="text" name="type" placeholder="Type of art" />
          <br />
          <input type="text" name="author" placeholder="Piece author" />
